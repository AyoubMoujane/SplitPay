<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.authentification.LogInController">
   <children>
      <BorderPane prefHeight="15.0" prefWidth="320.0">
         <center>
         <VBox alignment="CENTER" fillWidth="false" minHeight="500.0" prefHeight="500.0" prefWidth="320.0" BorderPane.alignment="CENTER">
            <children>
                  <Label text="Log In">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               <TextField fx:id="credential" layoutX="86.0" layoutY="78.0" promptText="email or phone" text="test@test.com">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></TextField>
               <PasswordField fx:id="password" layoutX="86.0" layoutY="142.0" promptText="password" text="splitpay">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></PasswordField>
               <Button layoutX="128.0" layoutY="217.0" mnemonicParsing="false" onAction="#logIn" prefHeight="35.0" prefWidth="65.0" text="Log In">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Button>
                  <Hyperlink onAction="#goToForgottenPasswordView" text="Forgotten password?">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin></Hyperlink>
               <Button mnemonicParsing="false" onAction="#goToNormalUserSignUpView" prefHeight="35.0" prefWidth="65.0" text="Sign Up">
                     <VBox.margin>
                        <Insets top="60.0" />
                     </VBox.margin>
                  </Button>
            </children>
         </VBox>
         </center>
      </BorderPane>
   </children>
</VBox>
