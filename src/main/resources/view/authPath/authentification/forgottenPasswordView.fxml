<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.authentification.ForgottenPasswordController">
   <children>
      <BorderPane prefHeight="15.0" prefWidth="320.0">
      <center>
      <VBox alignment="CENTER" fillWidth="false" minHeight="500.0" prefHeight="340.0" prefWidth="320.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="54.0" layoutY="14.0" text="Forgotten password">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="credential" layoutX="86.0" layoutY="110.0" promptText="email or phone">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></TextField>
                  <HBox>
                     <children>
                  <Button mnemonicParsing="false" onAction="#goToLogInView" prefHeight="35.0" prefWidth="65.0" text="Cancel">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </Button>
                  <Button mnemonicParsing="false" onAction="#resetPassword" prefHeight="35.0" prefWidth="117.0" text="Reset password" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
         </children>
      </VBox>
      </center>
      </BorderPane>
   </children>
</VBox>
