<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.split.FreeSplitCreationController">
    <children>
        <BorderPane prefHeight="501.0" prefWidth="320.0">
            <top>
                <fx:include source="../menu.fxml" />
            </top>
            <center>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">

                    <BorderPane.margin>
                        <Insets top="5.0" />
                    </BorderPane.margin>
               <children>
                  <Label text="Create FREESPLIT">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label text="Split label" />
                  <TextField fx:id="splitLabel" prefHeight="27.0" prefWidth="260.0" promptText="Bowling payment">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Goal amount" />
                  <TextField fx:id="splitGoalAmount" promptText="13.99">
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Choose store" />
                  <ListView fx:id="listView" prefHeight="118.0" prefWidth="320.0">
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                  </ListView>
                  <Button mnemonicParsing="false" text="Create" />
               </children>
                </VBox>
            </center>
            <bottom>
                <fx:include source="../homeButtonView.fxml" />
            </bottom>
        </BorderPane>
    </children>
</VBox>
