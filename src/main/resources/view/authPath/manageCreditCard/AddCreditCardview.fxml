<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.manageCreditCard.AddCreditCardController">
   <children>
      <BorderPane prefHeight="15.0" prefWidth="320.0">
         <top>
            <fx:include source="../menu.fxml" />
         </top>
         <center>
            <VBox alignment="TOP_CENTER" fillWidth="false" minHeight="410.0" prefHeight="340.0" prefWidth="320.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="249.0" layoutY="38.0" text="Add Credit Card">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Label>
                  <TextField fx:id="number" layoutX="85.0" layoutY="59.0" promptText="number">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="nameOwner" layoutX="85.0" layoutY="281.0" promptText="Name">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="date" layoutX="85.0" layoutY="102.0" promptText="date">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="cvv" layoutX="85.0" layoutY="190.0" promptText="cvv">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></TextField>
                  <HBox alignment="CENTER" minWidth="320.0" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#goToCreditCardView" text="Cancel">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#addCard" text="Validate" />
                     </children>
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
        </center>
         <bottom>
            <fx:include source="../homeButtonView.fxml" />
         </bottom>
      </BorderPane>
   </children>
</VBox>
